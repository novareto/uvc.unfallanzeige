    <div class="row">
      <div class="col-md-12">
        <div tal:define="widget W.get('form.accidentii.field.diaadv')" metal:use-macro="view.macros['field']" />
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div tal:define="widget W.get('form.accidentii.field.unfeba')" metal:use-macro="view.macros['field']" />
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div tal:define="widget W.get('form.accidentii.field.unfeba1')" metal:use-macro="view.macros['field']" />
      </div>
    </div>
  </div>

  <div class="fields" tal:condition="view.parent.fieldWidgets">
    <span class="field" tal:repeat="widget view.parent.fieldWidgets">
      <tal:widget tal:content="structure widget.render()" />
    </span>
  </div>

  <div class="actions">
    <span class="action" tal:repeat="widget view.actionWidgets">
      <tal:widget tal:content="structure widget.render()" />
    </span>
  </div>
</fieldset>
